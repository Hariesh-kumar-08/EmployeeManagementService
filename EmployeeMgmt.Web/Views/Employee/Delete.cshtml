@model EmployeeMgmt.Application.DTOs.EmployeeDTO

@{
    ViewData["Title"] = "Delete Employee";
}

<div class="container">
    <div class="card mx-auto" style="width: 30rem; background-color: #ffcccc;">
        <div class="card-header">
            <h5 class="card-title text-danger">Delete Employee</h5>
        </div>
        <div class="card-body">
            <h6>Are you sure you want to delete this employee?</h6>
            <dl class="row">
                <dt class="col-sm-3">Employee Code:</dt>
                <dd class="col-sm-9">@Model.EmployeeCode</dd>

                <dt class="col-sm-3">Name:</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Email:</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Department:</dt>
                <dd class="col-sm-9">@Model.Department.DepartmentName</dd>

                <dt class="col-sm-3">Hire Date:</dt>
                <dd class="col-sm-9">@Model.HireDate.ToString("yyyy-MM-dd")</dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="EmployeeId" />
                <div class="text-center">
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-action="Index" class="btn btn-light">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
