@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <div class="jumbotron text-center">
        <h1 class="display-4">Welcome to the Employee Management System</h1>
        <p class="lead">Efficiently manage your organization's employees and departments.</p>
        <hr class="my-4">
        <p>With this system, you can view, add, edit, and delete employees and departments, ensuring smooth HR operations.</p>
        <a asp-controller="Employee" asp-action="Index" class="btn btn-primary btn-lg mx-2">
            <i class="fas fa-users"></i> View Employee List
        </a>
        <a asp-controller="Department" asp-action="Index" class="btn btn-success btn-lg mx-2">
            <i class="fas fa-building"></i> View Department List
        </a>
    </div>

    <div class="row mt-5 text-center">
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Manage Employees</h5>
                    <p class="card-text">Add, edit, and delete employee details to keep your organization up-to-date.</p>
                    <a asp-controller="Employee" asp-action="Create" class="btn btn-outline-primary">
                        <i class="fas fa-plus"></i> Add Employee
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Manage Departments</h5>
                    <p class="card-text">Create and update department information to organize employees by department.</p>
                    <a asp-controller="Department" asp-action="Create" class="btn btn-outline-success">
                        <i class="fas fa-plus"></i> Add Department
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">System Overview</h5>
                    <p class="card-text">Learn more about how the Employee Management System helps streamline your operations.</p>
                    <a href="#" class="btn btn-outline-info">
                        <i class="fas fa-info-circle"></i> Learn More
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
