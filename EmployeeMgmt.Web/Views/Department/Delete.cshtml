@model EmployeeMgmt.Application.DTOs.DepartmentDTO

@{
    ViewData["Title"] = "Delete Department";
}

<div class="container">
    <div class="card mx-auto" style="width: 30rem; background-color: #ffcccc;">
        <div class="card-header">
            <h5 class="card-title text-danger">Delete Department</h5>
        </div>
        <div class="card-body">
            <h6>Are you sure you want to delete this department?</h6>
            <dl class="row">
                <dt class="col-sm-3">Department Name:</dt>
                <dd class="col-sm-9">@Model.DepartmentName</dd>

                <dt class="col-sm-3">Description:</dt>
                <dd class="col-sm-9">@Model.Description</dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="DepartmentId" />
                <div class="text-center">
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-action="Index" class="btn btn-light">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
